<section class="select-sec">
<div class="max-w-lg mx-auto">
  <h1 class="text-2xl text-center mb-4">区エスト詳細</h1>
  <h1 class="text-3xl text-center text-white mb-4"><%=@post.title%></h1>
  <div class="grid grid-cols-5 gap-4 mb-4">
    <% if @post.image.attached? %>
      <%= image_tag @post.image.variant(resize: "200x200>"),class: "col-span-2 rounded-xl self-center" %>
    <% end %>
    <div class="overflow-x-auto col-span-3">
      <table class="table w-full">
        <tbody>
          <!-- row 1 -->
          <tr>
            <th>場所</th>
            <td><%=@post.place%></td>
          </tr>
          <!-- row 2 -->
          <tr>
            <th>日時</th>
            <td><%=@post.date%></td>
          </tr>
          <!-- row 3 -->
          <tr>
            <th>対象</th>
            <td><%=@post.target%></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="www rounded mb-4">
    <p class="py-4 pl-3 text-white"><%=safe_join(@post.body.split("\n"),tag(:br))%></p>
  </div>
  <div>
    <% if current_user %>
      <%= link_to 'クエストに出かける', quests_path(id: @post.id), data: { turbo_method: :post }, class: 'btn btn-primary' %>
    <% else %>
      <%= link_to 'ログインしてクエストに出かける', auth_at_provider_path(provider: :google), class: "btn btn-primary"%>
    <% end %>
    <label for="my-modal-<%=@post.id%>" class="btn">閉じる</label>
  </div>
  </div>
</section>
