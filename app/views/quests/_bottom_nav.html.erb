<div id="bar2" class="w-full max-w-lg">

<%= render 'quests/quests'%>

<%= render 'posts/users'%>
<!-- component -->
<!-- MDI Icons -->
<link rel="stylesheet" href="https://cdn.materialdesignicons.com/6.5.95/css/materialdesignicons.min.css">
  <!-- Navigation Bar -->
  <div class="px-5 pt-3 bg-white shadow-lg rounded-2xl">
    <div class="flex flex-row">
      <!-- Item #1 -->
      <div class="flex-grow group">
        <%= link_to root_path, class: "p-3 text-gray-400 hover:text-yellow-500" do %>
          <span class="flex flex-col items-center">
            <!-- Icon -->
            <i class="mdi mdi-home-outline mdi-24px mx-1 text-gray-500 group-hover:text-gray-700
              transition-color duration-200"></i>

            <!-- Text -->
            <span class="text-xs mb-2 transition-all duration-200">
              切り替える
            </span>

            <!-- Focus Dot -->
            <span class="h-2 w-2 rounded-full group-hover:bg-yellow-500
              transition-all duration-150 delay-100"></span>
          </span>
        <%end%>
      </div>
      <!-- Item #2 -->
      <div class="flex-grow group">
        <label for="my-modal-4" class="p-3 text-gray-400 hover:text-yellow-500">
          <span class="flex flex-col items-center">
            <!-- Icon -->
            <i class="mdi mdi-format-list-bulleted mdi-24px mx-1 text-gray-500 group-hover:text-gray-700
              transition-color duration-200"></i>

            <!-- Text -->
            <span class="text-xs mb-2 transition-all duration-200">
              受注中のクエスト
            </span>

            <!-- Focus Dot -->
            <span class="h-2 w-2 rounded-full group-hover:bg-yellow-500
              transition-all duration-150 delay-100"></span>
          </span>
        </label>
      </div>

      <!-- Item #3 Active -->
      <div class="flex-grow group">
        <label for="my-modal-users" class="p-3 text-gray-400 hover:text-yellow-500">
          <span class="flex flex-col items-center">
            <!-- Icon -->
            <i class="mdi mdi-account-outline mdi-24px mx-1 text-gray-700 group-hover:text-gray-700
              transition-color duration-200"></i>

            <!-- Text -->
            <span class="text-xs mb-2 transition-all duration-200">
            <% if current_user %>
              <%= current_user.name %>
            <%else%>
              ユーザー
            <%end%>
            </span>

            <!-- Focus Dot -->
            <span class="h-1 w-5 rounded-full bg-yellow-500 group-hover:bg-yellow-500
              hover:h-3 hover:w-3 transition-all duration-150 delay-100"></span>
          </span>
        </label>
      </div>
    </div>
  </div>
</div>