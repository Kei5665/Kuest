<section class="select-sec">
<div class="max-w-lg mx-auto">
  <h1 class="text-2xl text-center mb-4">区エスト詳細</h1>
  <h1 class="text-3xl text-center text-white mb-4"><%=@post.title%></h1>
  <div class="grid grid-cols-5 gap-4 mb-4">
    <% if @post.image.attached? %>
      <%= image_tag @post.image.variant(resize: "200x200>"),class: "col-span-2 rounded-xl self-center" %>
    <% end %>
    <div class="overflow-x-auto col-span-3">
      <table class="table w-full">
        <tbody>
          <tr>
            <th>場所</th>
            <td><%=@post.place%></td>
          </tr>
          <tr>
            <th>日時</th>
            <td><%=@post.date%></td>
          </tr>
          <tr>
            <th>料金</th>
            <td><%=@post.price%></td>
          </tr>
          <tr>
            <th>時間</th>
            <td><%=@post.time%></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="www rounded mb-4">
    <p class="py-4 pl-3 text-white"><%=safe_join(@post.body.split("\n"),tag(:br))%></p>
  </div>
  <div>
    <% if current_user %>
      <%= link_to 'クエストに出かける', quests_path(id: @post.id), data: { turbo_method: :post }, class: 'btn btn-primary' %>
    <% else %>
    <p class="text-bold text-lg">ログインしてクエストに出かけよう！</p>
    <div class="btn-group">
      <%= link_to 'グーグルログイン', auth_at_provider_path(provider: :google), class: "btn btn-primary"%>
      <%= link_to 'ゲストログイン', guest_login_path, data: { turbo_method: :post }, class: "btn"%>
    </div>
    <% end %>
    <%= link_to '戻る', area_path(@post.area), class: "btn mt-2"%>
  </div>
  </div>
</section>
